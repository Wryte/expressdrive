{{#if users}}
<table id="usersTable" class="file-table">
	<thead>
		<tr>
			<th class="shrink text-center select-all-td"><i class="fa fa-circle-o"></i></th>
			<th class="indent">Username</th>
			<th class="shrink">Permission</th>
		</tr>
	</thead>
	<tbody>
		{{#each users}}
		<tr class="item-element" data-id="{{this.id}}" data-username="{{this.username}}" data-permission="{{this.permission}}">
			<td class="select-td"><i class="fa fa-circle-o fa-fw"></i></td>
			<td class="description-td">
				<div class="user-container">
					<i class="fa fa-user fa-fw"></i>
					<div>
						<p>{{this.username}}</p>
					</div>
				</div>
			</td>
			<td class="text-center nowrap">
				{{#ifCond this.permission '==' 0}}admin{{/ifCond}}
				{{#ifCond this.permission '==' 1}}user{{/ifCond}}
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
{{else}}
<div class="no-files">
	<p>There are currently no users. Click the create user button ( <i class="fa fa-user"></i> ) above to create some.</p>
</div>
{{/if}}