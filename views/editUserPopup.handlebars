<div id="editUserPopup" class="popup edit-popup">
	<div class="header">Edit user '<span id="editUserHeaderSpan"></span>'</div>
	<div class="body">
		<label>Username</label>
		<input id="usernameInputEU" type="text" autocomplete="off">
		<label>Password</label>
		<input id="passwordInputEU" type="password" autocomplete="off">
		<label>Repeat Password</label>
		<input id="passwordRepeatInputEU" type="password" autocomplete="off">
		<label>Permission</label>
		<select id="permissionSelectEU">
			<option value=2>Read-Only</option>
			<option value=1>Edit</option>
			<option value=0>Admin</option>
		</select>
	</div>
	<div class="footer">
		<button id="editUserButton" class="primary">Save</button>
		<button data-close-popup=true>Cancel</button>
	</div>
</div>